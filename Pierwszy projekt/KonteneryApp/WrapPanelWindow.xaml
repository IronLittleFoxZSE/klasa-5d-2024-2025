<Window x:Class="KonteneryApp.WrapPanelWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KonteneryApp"
        mc:Ignorable="d"
        Title="WrapPanelWindow" Height="200" Width="400">
    <WrapPanel Orientation="Horizontal">
        <Button Content="Pierwszy przycisk"/>
        <Button Content="Drugi przycisk"
                Width="120"/>
        <Button Content="Trzeci przycisk"
                Height="60"/>
        <Button Content="Czwarty przycisk"/>
        <Button Content="Piąty przycisk"/>
        <WrapPanel Orientation="Vertical">
            <CheckBox Content="Opcja1"/>
            <CheckBox Content="Opcja2"/>
            <CheckBox Content="Opcja3"/>
            <CheckBox Content="Opcja4"/>
            <CheckBox Content="Opcja5"/>
            <CheckBox Content="Opcja5"/>
            <CheckBox Content="Opcja5"/>
            <CheckBox Content="Opcja5"/>
            <CheckBox Content="Opcja5"/>
        </WrapPanel>
    </WrapPanel>
</Window>
