<Window x:Class="KonteneryApp.DockPanelWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KonteneryApp"
        mc:Ignorable="d"
        Title="DockPanelWindow" Height="450" Width="800">
    <DockPanel LastChildFill="False">
        <Button Content="Pierwszy"/>
        <Button Content="Drugi"
                DockPanel.Dock="Top"/>
        <Button Content="Trzeci"
                DockPanel.Dock="Right"/>
        <Button Content="Czwarty"
                DockPanel.Dock="Bottom"/>
        <Button Content="Piąty"
                DockPanel.Dock="Top"/>
    </DockPanel>
</Window>
